{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "index.d.ts"],
	"exclude": ["node_modules", "dist"]
}
